{
  "name": "stoneyoneburn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:server": "ts-node ./src/index.ts",
    "dev:server:test": "cross-env APP_ENV=test ts-node ./src/index.ts",
    "dev:worker": "ts-node ./src/index-worker.ts",
    "dev:dashboard": "vite --clearScreen false",
    "dev": "node scripts/check-db.js && concurrently --kill-others npm:dev:*",
    "build": "tsc",
    "build:dashboard": "vite build",
    "start:server": "node ./dist/index.js",
    "start:worker": "node ./dist/index-worker.js",
    "start": "concurrently npm:start:*",
    "populate": "ts-node populate.ts",
    "backfill-seller-channels": "ts-node scripts/backfill-seller-channels.ts",
    "test": "jest",
    "test:integration:order-splitting": "jest order-splitting.integration.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:storefront": "cd storefront && npm test",
    "test:all": "concurrently --kill-others-on-fail \"npm test\" \"npm run test:storefront\"",
    "test:log": "ts-node scripts/test-with-logs.ts",
    "test:log:backend": "ts-node scripts/test-with-logs.ts backend",
    "test:log:frontend": "ts-node scripts/test-with-logs.ts frontend",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.ts\"",
    "type-check": "tsc --noEmit",
    "ci": "npm run type-check && npm run lint && npm run format:check && npm run test:all",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@vendure/asset-server-plugin": "3.5.2",
    "@vendure/core": "^3.5.3",
    "@vendure/dashboard": "3.5.2",
    "@vendure/email-plugin": "3.5.2",
    "@vendure/graphiql-plugin": "3.5.2",
    "@vendure/payments-plugin": "^3.5.2",
    "better-sqlite3": "12.5.0",
    "dotenv": "17.2.3",
    "pg": "^8.16.3",
    "stripe": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vendure/cli": "3.5.2",
    "@vendure/create": "^3.5.2",
    "concurrently": "9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "5.8.2"
  }
}
